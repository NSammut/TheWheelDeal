<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.thewheeldeal.Main2Activity">

    <Button
        android:id="@+id/challengesButton"
        android:layout_width="115dp"
        android:layout_height="85dp"
        android:drawableTop="@drawable/ic_games"
        android:text="Challenges"
        android:layout_below="@+id/galleryButton"
        android:layout_alignStart="@+id/galleryButton"
        android:layout_marginTop="13dp" />

    <Button
        android:id="@+id/trophiesButton"
        android:layout_width="115dp"
        android:layout_height="85dp"
        android:layout_alignStart="@+id/challengesButton"
        android:layout_below="@+id/challengesButton"
        android:layout_marginTop="22dp"
        android:drawableTop="@drawable/ic_trophies"
        android:text="Trophies" />

    <Button
        android:id="@+id/button"
        android:layout_width="115dp"
        android:layout_height="85dp"
        android:layout_marginTop="66dp"
        android:drawableTop="@drawable/ic_camera"
        android:onClick="openCamera"
        android:text="Camera"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/galleryButton"
        android:layout_width="115dp"
        android:layout_height="85dp"
        android:layout_alignStart="@+id/button"
        android:layout_below="@+id/button"
        android:layout_marginTop="13dp"
        android:drawableTop="@drawable/gallery"
        android:text="Gallery" />

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="Logout" />
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="23dp"
        android:indeterminate="false"
        android:max="100"
        android:minHeight="50dp"
        android:minWidth="200dp"
        android:progress="1"
        android:layout_below="@+id/trophiesButton"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="65dp" />
</RelativeLayout>
